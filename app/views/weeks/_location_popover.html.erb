<div class="form">
  <div class="form-group">
    <%= select_tag :location_id, options_for_select(locations.map {|l| [l.to_s, l.id]}, :include_blank => true), { :class => "form-control invisible"} %>
    <div class="help-block">
      <% if model.is_a?(Entry) %>
        Set location for this entry
      <% else %>
        Set location for every entry in this timesheet
      <% end %>
    </div>
  </div>
  <div class="form-group text-center">
    <button type="button" class="location-cancel btn btn-default btn-xs">Cancel</button>
    <button type="button" class="location-set btn btn-info btn-xs">Set Location</button>
  </div>
</div>
