<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @invoice do |f| %>
      <div class="form-group">
        <%= f.label :invoicing_week %>
        <%= f.select :invoicing_week, options_for_select(options_for_weeks, @invoice.invoicing_week.ymd_dash), {}, { :class => "form-control input-sm"} %>
      </div>
      <div class="form-group">
        <%= f.label :project_id %>
        <%= f.select :project_id, grouped_options_for_select(grouped_options_for_clients_and_projects), {}, {:class => "form-control input-sm"} %>
      </div>
      <div class="form-group text-right">
        <%= f.submit "Send invoice to Harvest", :class => "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
