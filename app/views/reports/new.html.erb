<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag 'generate', :method => "get", :class => "form-horizontal" do |f| %>
      <div class="form-group">
        <%= label_tag :start_date, nil, :class => "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= date_field_tag :start_date, Time.zone.now.beginning_of_year.to_s(:ymd_dash), :placeholder => "yyyy-mm-dd", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :end_date, nil, :class => "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= date_field_tag :end_date, Time.zone.now.end_of_year.to_s(:ymd_dash), :placeholder => "yyyy-mm-dd", :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :type, nil, :class => "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= select_tag :type, options_for_select([
            ["Revenue by Location", "income-by-location"],
            ["Revenue by Agent", "income-by-user"]
          ]), {:class => "form-control input-sm"} %>
        </div>
      </div>
      <div class="form-group text-right">
        <%= submit_tag "Generate Report", :class => "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
